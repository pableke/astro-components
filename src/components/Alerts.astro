---
import Alert from "./Alert.astro";
import alerts from "../data/alerts.ts";
---

<div class="alerts">
    { alerts.map(alert => <Alert {... alert}/>) }
</div>
<div class="loading hide">
    <b class="fas fa-spinner fa-3x fa-spin loading-content"></b>
</div>
<a id="back-to-top" href="#top" class="hide back-to-top">
    <svg class="w-6 h-6" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 8">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7 7.674 1.3a.91.91 0 0 0-1.348 0L1 7"/>
    </svg>
</a>

<style>
    .alerts { position: fixed; top: 3rem; right: 1em; width: 45%; z-index: 9; }
    .loading { position: fixed; left: 0px; top: 0px; width: 100%; height: 100%; z-index: 9999; background-color: rgba(255, 255, 255, .7); }
    .loading-content { position: absolute; top: 50%; left: 50%; text-align: center; z-index: 100; }

    .back-to-top {
        position: fixed; bottom: 25px; right: 25px; padding: .6em; opacity: .8;
        border-radius: .3rem; background-color: rgb(229 231 235)/* gray-200 */; }
    .back-to-top:hover { background-color: rgb(209 213 219)/* gray-300 */; }
    :is(.dark .back-to-top) { color: rgb(229 231 235)/* gray-200 */; background-color: rgb(107 114 128)/* gray-500 */; }
    :is(.dark .back-to-top:hover) { background-color: rgb(75 85 99)/* gray-600 */; }
</style>
