---
interface Props { label: string; name: string; }
const { label, name } = Astro.props;
---

<div id={name} class="ui-block autocomplete">
    <label for=`ac-${name}`>{label}</label>
    <div class="ui-icon-block">
        <div class="ui-icon-left">
            <svg class="w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
            </svg>
        </div>
        <input type="search" id=`ac-${name}` name=`ac-${name}` class="ui-input pl-9" placeholder="Select an option..." autocomplete="off" />
        <input type="hidden" name={name}/>
    </div>
    <ul role="list" class="results"></ul>
    <span id=`tip-${name}` class="ui-errtip"></span>
</div>
